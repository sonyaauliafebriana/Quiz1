<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="#ECE6ED"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="^SONYA AULIA FEBRIANA QUIZ 1^"
        android:textSize="17dp"
        android:textStyle="bold"
        android:height="60dp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#AEB5DA"
        android:layout_marginTop="16dp"
        android:textColor="#0A196E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etinputitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:hint="Nama Pembeli"
        android:minHeight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:textColor="#0E0E0E"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etKodebrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:hint="Kode Barang"
        app:layout_constraintTop_toBottomOf="@id/etinputitem"
        android:minHeight="4dp"
        android:textColor="#370440"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etbrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:hint="Jumlah Barang"
        app:layout_constraintTop_toBottomOf="@id/etKodebrg"
        android:minHeight="4dp"
        android:textColor="#370440"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etbrg"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbSilver"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Silver"
            android:textColor="#0A196E" />

        <RadioButton
            android:id="@+id/rbGold"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gold"
            android:textColor="#0A196E" />

        <RadioButton
            android:id="@+id/rbBiasa"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Biasa"
            android:textColor="#0A196E" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvDiskon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        android:text="Transaksi Diatas 10 Juta Akan Mendapatkan Diskon Sebesar 100.000"
        android:textColor="#F10606"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnProses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Proses"
        app:layout_constraintTop_toBottomOf="@id/tvDiskon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>